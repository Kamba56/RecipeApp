<% if user_signed_in? %>
    <%= button_to "Add Food", new_food_path, method: :get, class: "btn btn-primary"  %>
<%end%>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Food</th>
            <th scope="col">Measurment Unit</th>
            <th scope="col">Unit Price </th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @foods.each do |food| %>
            <tr>
            <td><%= food.name %></td>
            <td><%= food.measurement_unit %></td>
            <td><%= food.price %></td>
            <td> <%= button_to "Delete", food_path(food), method: :delete, class: "btn btn-danger" %> </td>
            </tr>
        <% end %>
    </tbody>
</table>
