<h2> Add New Food </h2>
<%= form_with model: @food, url: food_index_path, data: { turbo: false} do |form| %>
        <% if @food.errors.any? %>
            <div class="alert alert-danger">
                <% @food.errors.full_messages do |message| %>
                    <div> <%= message %> </div>
                <% end %>
            </div>
        <% end %>
        <div class="mb-3">
            <%= form.label :name, class: "form-label" %>
            <%= form.text_field :name, class: "form-control", id: "exampleFormControlInput1", placeholder: "Food Name" %>
        </div>
        <div class="mb-3">
            <%= form.label :measurement_unit, class: "form-label" %>
            <%= form.select(:measurement_unit, options_for_select([["Grams", "g"], ["Kilogram", "kg"], ["units", "u"]], "u"), class: "form-select", id:"sss")%>
        </div>
        <div class="mb-3">
            <%= form.label :price, class: "form-label" %>
            <%= form.number_field :price, class: "form-control", id: "exampleFormControlInput1", placeholder: "Food Price" %>
        </div>
        <div class="mb-3">
            <%= form.label :quantity, class: "form-label" %>
            <%= form.number_field :quantity, class: "form-control", id: "exampleFormControlInput1", placeholder: "Food Quantity" %>
        </div>
        <%= form.submit "Add Food", class:"btn btn-primary" %>
<% end %>
